*, *:before, *:after
  margin 0
  padding 0
  -webkit-box-sizing border-box
  box-sizing border-box

@font-face
  font-family CtCommandPrompt
  src url('Command-Prompt-12x16.ttf')

specifyFont(inputColor)
  font-smooth never
  webkit-font-smoothing none
  -webkit-font-smoothing none
  font-family CtCommandPrompt
  font-size 1em
  color inputColor
  line-height 120%
  
inputBasics()
  border none
  outline none
  
body
  background #000000
  color #C0C0C0 
  
.content
  width 100%
  height 100%
  transition all 1s
  
.container
  box-sizing border-box
  width 100%

.row
  content ''
  display table
  clear both
    
.column
  float left
  //padding-left 1em
  //padding-right 1em
  width 194px
  min-height 1.75em
  &.quarter
    width 48px
  &.half
    width 97px
  &.threeQuarters
    width 145px
  &.oneAndHalf
    width 291px
  &.double
    width 388px
  &.triple
    width 582px
  &.super
    width 100%
  
.indent
  margin-left 50px
    
.spacer
  height 50px

.break
  height 1em
  
.alive
  background url('checkboxTrue.png')
  width 185px
  height 19px
  outline none
  &.false
    background url('checkboxFalse.png')  
    
.point
  transition all 0.25s
  specifyFont(rgba(192, 192, 192, 1))
  &.hidden
    color rgba(0, 0, 0, 1)
  
.formTitle
  specifyFont(rgba(192, 192, 192, 1))
  width 10em
  
.box
  border 2px solid
  border-color rgba(192, 192, 192, 1)
  padding 1em
  &.center
    display table
    margin auto
    width auto
    height auto

.block
  display inline-block
  white-space nowrap
    
.input
  transition all 0.5s
  margin-right 1em
  padding-left 1em
  padding-right 0em
  width 185px
  specifyFont(rgba(192, 192, 192, 1))
  background rgba(64, 64, 64, 1)
  inputBasics()
  &.special
    background rgba(64, 58, 32, 1)
  &.verySpecial
    background rgba(48, 42, 20, 1)
  &.quarter

    width 44px
  &.half
    width 88px
  &.threeQuarters
    width 137px
  &.oneAndHalf
    width 282px
  &.double
    width 379px
  &.problem
    background #f23d21
    color rgba(0, 0, 0, 1)
  &.success
    background #0aca1a
    color rgba(0, 0, 0, 1)
  &.hidden
    padding 0em
    margin-bottom 0em
    color rgba(0, 0, 0, 1)
    background rgba(0, 0, 0, 1)
    
.submit
  transition all 0.25s
  width 185px
  padding-left 0em
  padding-right 0em
  specifyFont(rgba(0, 0, 0, 1))
  background rgba(64, 64, 64, 1)
  text-decoration none
  &.quarter
    width 38px
  &.half
    width 88px
  &.critical
    background #f23d21
    &:hover
      background #f29d31
      
  &.danger
    background #723d21
    &:hover
      color rgba(0, 0, 0, 1)
      background #f23d21
      
  &.good
    background #2a6a3a
    &:hover
      background #0aca1a

  &.current
    background rgba(192, 192, 192, 1)
    color rgba(64, 64, 64, 1)
  &.double
    width 370px
  inputBasics()
  &.add
    margin-top 1.2em
  &:hover
    background rgba(192, 192, 192, 1)
    color rgba(64, 64, 64, 1)
    




